<!-- MAIN CONTENT -->
<!-- The survey page for all users (View available surveys to answer) -->
<link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
<!-- Background & animion & navbar & title -->
  <div class="container-fluid">
    <!-- Background animtion-->
    <div class="background">
       <div class="cube"></div>
       <div class="cube"></div>
       <div class="cube"></div>
       <div class="cube"></div>
      <div class="cube"></div>

            <section class="section-header-content" >
              <% if(displayName) {%>
                <div>
                  <a href="/api/add"><button style="margin-top: 0px;"><i class="fa fa-plus"></i> Create</button></a>
                </div>
              <%}%>
              <h3 style="color: rgb(248, 244, 244); margin-top: 10px; margin-bottom: 50px;"><b>Available Surveys</b></h3>
            </section>
      <!-- Content for the survey-list page -->   
      <!-- Main Content -->
    <main class="container">
            <div class="col-md-11 text-center">
              <div class="row">
                <% for(let count = 0; count < surveys.length; count++) { %>
                    <% if(displayName) {%>
                        <% if ( today >= surveys[count].StartDate && today <= surveys[count].EndDate) {%>
                            <div class="col-3">    
                                    <div class="card text-center popup" style="background-color: transparent; margin-bottom: 15px;">
                                        <div class="card-body" style="border-radius: 10px 10px; background-color:#fcfeff;   cursor: pointer; cursor: hand;" onclick="window.location='/api/answer/<%= surveys[count]._id %>';">
                                            <div class="row">
                                              <div class="col">
                                                <h5 style="color: rgb(7, 5, 5); margin-top: 2px;  font-family:'Rockwell';" class="card-title"><%= surveys[count].Title %></h5>
                                                <h7>Available until: <%= surveys[count].EndDate.toISOString().split('T')[0] %></h7>
                                              </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    <% } 
                    } 
                    else { %>
                            <% if ( today >= surveys[count].StartDate && today <= surveys[count].EndDate) {%>
                              <div class="col-3">    
                                <div class="card text-center popup" style="background-color: transparent; margin-bottom: 15px;">
                                    <div class="card-body" style="border-radius: 10px 10px; background-color:#fcfeff;   cursor: pointer; cursor: hand;" onclick="window.location='/api/answer/<%= surveys[count]._id %>';">
                                        <div class="row">
                                          <div class="col">
                                            <h5 style="color: rgb(7, 5, 5); margin-top: 2px;  font-family:'Rockwell';" class="card-title"><%= surveys[count].Title %></h5>
                                            <h7>Available until: <%= surveys[count].EndDate.toISOString().split('T')[0] %></h7>
                                          </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        
                    <% } 
                  } %>
                    
                </div>
            </div>
          </div>
      </main>